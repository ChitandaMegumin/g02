<view class="menu-wrap">
  <view class="menu-item {{Order_status==0?'choose-type':''}}" bindtap="choooType" data-type="0">待收货</view>
  <view class="menu-item {{Order_status==1?'choose-type':''}}" bindtap="choooType" data-type="0">待发货</view>
  <view class="menu-item {{Order_status==2?'choose-type':''}}" bindtap="choooType" data-type="0">已完成</view>
</view>

<block wx:for="{{orderList}}">
  <view class="order-wrap">
    <!-- <view class="order-id">订单号:{{item._id}}</view> -->
    <!-- <block wx:for="{{item.goods}}" wx:for-item="good"> -->
      <view class="good-wrap">
        <image class="good-img" src="{{item.Order_img}}"></image>
        <view>
          <view>{{item.Goods_name}}</view>
          <view class="good-bottom">
            <view>￥{{item.Order_commodprice}}</view>
            <view>X{{item.Order_commodnum}}</view>
          </view>
        </view>
      </view>
    <!-- </block> -->
    <view>合计:{{item.price}}</view>
    <view>时间:{{item.Order_time}}</view>
  </view>
</block>
