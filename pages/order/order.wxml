<view class="menu-wrap" >
  <view class="menu-item {{Order_status==0?'choose-type':''}}" bindtap="gotoorder" data-type="0">待收货</view>
  <view class="menu-item {{Order_status==1?'choose-type':''}}" bindtap="choooType" data-type="0">已完成</view>
</view>

    
    <view class="order-wrap" bindtap="gotopay">
    <block wx:for="{{orderList}}">
    <!-- <block wx:for="{{orderList}}" wx:for-item="good"> -->
      <view class="order-id" >商品号:{{item._id}}</view>
      <view class="good-wrap">
        <image class="good-img" src="{{item.Commodity_img}}"></image>
        <view>
          <view>{{item.Commodity_name}}</view>
          <view class="good-bottom">
            <view>￥{{item.Commodity_price}}</view>
            <view>X{{item.Commodity_currentnum}}</view>
          </view>
        </view>
      </view>
    <!-- </block> -->
    
  </block>
    <!-- <view>合计:￥{{item.price}}</view>
    <view>时间:{{item.Order_time}}</view> -->
</view>

