<view class="page">

<view class="bgc">
  <view class="bgc_image">
    <image src="/image/bgc.png"></image>
  </view>
</view>

<view class="userinfo">
  <view class="userinfo_card">
    <view class="userimage">
      <image src="{{username.image}}"></image>
    </view>
    <view class="username">
      <text wx:if="{{username}}">{{username.Customer_name}}</text>
      <view class="ismember">
        <text wx:if="{{username.Customer_member}}">大会员</text>
        <text wx:elif="{{!username.Customer_member}}">开通会员</text>
      </view>
      <view class="userlevel">
        <text wx:if="{{username}}">Lv.{{username.Customer_level}}</text>
      </view>
    </view>
    
    
    <view class="userdata">

      <view class="userpoint" bindtap="gotopointshop">
        <view class="userdata_image_box">
          <image class="userdata_image" src="/image/point.png"></image>
        </view>
        <view class="userdata_text_box">
          <text class="userdata_text" wx:if="{{username}}">积分:{{username.Customer_point}}</text>
        </view>
      </view>

      <view class="userdiscounts">
        <view class="userdata_image_box">
          <image class="userdata_image" src="/image/cards.png"></image>
        </view>
        <view class="userdata_text_box">
          <text class="userdata_text" wx:if="{{username}}">礼品卡:{{username.Customer_card}}</text>
        </view>
      </view>

      <view class="usercard">
        <view class="userdata_image_box">
          <image class="userdata_image" src="/image/discounts.png"></image>
        </view>
        <view class="userdata_text_box">
          <text class="userdata_text" wx:if="{{username}}">优惠券:{{username.Customer_discount}}</text>
        </view>
      </view>
    </view>
  </view>
</view>

<view class="task">
  <view class="task_text_box">
    <text class="task_text">任务中心</text>
  </view>
  <view class="tast_image_box">
    <image class="task_image" src="/image/task.png"></image>
  </view>
</view>


<view class="options">
  <view class="option" bindtap="gotomembercode">
    <view class="text_box">
      <text class="option_text">会员码</text>
    </view>
    <view class="arrow_box">
      <image class="arrow" src="/image/jiantou.png"></image>
    </view>
  </view>
  <view class="option" bindtap="gotopointshop">
    <view class="text_box">
      <text class="option_text">兑换中心</text>
    </view>
    <view class="arrow_box">
      <image class="arrow" src="/image/jiantou.png"></image>
    </view>
  </view>
  <view class="option" bindtap="gotochangeimage">
    <view class="text_box">
      <text class="option_text">更换头像</text>
    </view>
    <view class="arrow_box">
      <image class="arrow" src="/image/jiantou.png"></image>
    </view>
  </view>
</view>

<view class="footer">
    <view>
      <image src="/image/home.png" bindtap="gotohome" data-user="{{username._id}}"></image>
      <text>首页</text>
    </view>
    <view>
      <image src="/image/allgoods.png" bindtap="gotogoodsselect"></image>
      <text>商品分类</text>
    </view>
    <view>
      <image src="/image/dingdan.png" bindtap="gotoorder"></image>
      <text>订单</text>
    </view>
    <view>
      <image src="/image/me.png" bindtap="gotomy"></image>
      <text>我的</text>
    </view>
  </view>


</view>